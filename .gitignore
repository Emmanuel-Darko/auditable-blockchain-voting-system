# Ignore node_modules (both for Solidity and Next.js)
node_modules/

# Ignore build artifacts
artifacts/
cache/
coverage/
dist/
out/
typechain/
typechain-types/
coverage.json
hardhat.config.ts
truffle-config.js
.truffle/
.solcover.js

# Ignore environment variables
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Ignore lock files (optional, if you use one over the other)
# If you use npm:
package-lock.json
# If you use Yarn:
yarn.lock
# If you use pnpm:
pnpm-lock.yaml

# Ignore logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*

# Ignore editor-specific files
.vscode/
.idea/
*.suo
*.ntvs*
*.njsproj
*.sln
*.sw?

# Ignore system files
.DS_Store
Thumbs.db

# Ignore compiled contracts (specific to Hardhat or Truffle)
contracts/**/*.sol/
build/contracts/

# Ignore Next.js build output
.next/
.next/cache/

# Ignore Next.js static files that are generated
public/static/

# Ignore export output (if using 'next export')
out/

# Ignore Next.js serverless functions output
.vercel/
.vercel_build_output/

# Ignore Docker files if using Docker
docker-compose.yml
Dockerfile

# Ignore miscellaneous
*.log
*.tsbuildinfo

# Ignore Ethereum keys and secrets
*.secret
*.key
*.keystore
*.p12
*.cert
*.pem
